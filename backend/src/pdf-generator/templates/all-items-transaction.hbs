<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Medical Certificate (Paragon Multispecialty Clinic)</title>
  <style>
    @page { size: A4; margin: 0; }
    body {
      font-family: 'Times New Roman', Times, serif;
      background: #f2f2f2;
      padding: 30px;
      -webkit-print-color-adjust: exact;
    }

    #userBackground th,
    #userBackground td {
        border: 1px solid #333;
        padding: 6px 8px;
        word-wrap: break-word;
    }

    #userBackground th {
        text-align: center;
        font-weight: bold;
    }

    #userBackground td {
        text-align: left;
    }

    #userBackground tbody tr:nth-child(even) {
        background-color: #f4f7fa;
    }

    #userBackground tbody tr:hover {
        background-color: #e8f1f8;
    }

    .paper {
      width: 210mm;
      min-height: auto; 
      margin: 0 auto;
      background: white;
      box-shadow: 0 0 0.5cm rgba(0,0,0,0.15);
      padding: 28px 28px 40px 28px;
      box-sizing: border-box;
    }

    .header {
      display: flex;
      align-items: center;
      gap: 18px;
      border-bottom: 3px solid #222;
      padding-bottom: 12px;
    }

    .logo {
      width: 78px;
      height: 60px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .logo svg { width: 78px; height: 60px; }

    .clinic-name {
      flex: 1;
      text-align: center;
      font-size: 28px;
      letter-spacing: 1px;
      font-weight: 700;
    }

    .header-right {
      width: 260px;
      text-align: right;
      font-size: 12px;
    }

    .meta {
      display:flex;
      justify-content: space-between;
      margin-top: 8px;
      font-size: 12px;
      align-items: center;
    }

    .meta .left { max-width: 60%; }

    .title {
      text-align: center;
      font-size: 18px;
      {{!-- margin: 28px 0 18px 0; --}}
      letter-spacing: 1px;
      font-weight: 600;
      margin-top:20px
    }

    .form {
      font-size: 14px;
      line-height: 1.6;
    }

    .line {
      border-bottom: 1px solid #000;
      display: inline-block;
      min-width: 300px;
      height: 1.2em;
      vertical-align: middle;
    }

    .row { margin: 10px 0; }

    .label { width: 200px; display: inline-block; vertical-align: middle; }

    .big-blank {
      height: 90px;
      border-bottom: 1px solid #000;
      margin: 6px 0 18px 0;
      padding-top: 8px;
    }

    .recommend {
      margin-top: 6px;
      min-height: 70px;
    }

    .footer-note {
      margin-top: 18px;
      font-size: 12px;
    }

    .signature-area {
      display: flex;
      justify-content: flex-end;
      margin-top: 30px;
    }

    .sig-block {
      width: 260px;
      text-align: center;
      font-size: 12px;
    }

    .sig-line { border-top: 1px solid #000; margin-top: 28px; }

    .date-inline { float: right; text-align: right; font-size: 13px; }

    @media print {
      body { background: #fff; }
      .paper { box-shadow: none; margin: 0; }
    }
    .handwritten { font-family: "Segoe Script", "Bradley Hand", cursive; font-style: normal; font-size: 15px; }

  </style>
</head>
<body>
  {{#each this}}
  <div class="paper">
    <div class="header">
      <div class="logo" aria-hidden>
           <img
            src='data:image/png;base64, {{headerImg}}'
            width='110px'
            height="110px"
            alt=''
          />
      </div>

      <div class="clinic-name">PARAGON<br><span style="letter-spacing:2px; font-size:22px">MULTISPECIALTY CLINIC</span></div>

      <div class="header-right">
        <div style="font-weight:600">1F Bluz Building 2, Tadeco Road,<br>Brgy. San Francisco, Panabo City</div>
        <div style="margin-top:8px">☎ 0946-100-3260 &nbsp;&nbsp; | &nbsp;&nbsp; Mon to Sat 8:00am to 5:00pm</div>
      </div>
    </div>
   
    <div class="title">{{#ifCond type 1}} WEEKLY {{else}} MONTHLY {{/ifCond}} TRANSACTION REPORT </div>
   

    <div class="form" style="margin-bottom:20px" width="100%">
    <table id="userBackground"
        style="
            margin: 0 auto;
            width: 100%;
            border-collapse: collapse;
            font-family: Arial, sans-serif;
            font-size: 11px;
            table-layout: fixed;
        "
        >
        <thead>
            <tr style="background-color:#0f79b1; color:#fff;">
            <th>Name</th>
            <th>Date</th>
            <th>Type</th>
            <th>Qty</th>
            <th>Stock Change</th>
            <th>Supplier</th>
            <th>Lot No.</th>
            <th>Brand</th>
            <th>Performed By</th>
            <th>Notes</th>
            </tr>
        </thead>

        <tbody>
            {{#reportData}}
            <tr>
            <td>{{itemName}}</td>
            <td>{{formatDate transaction_date}}</td>
            <td>{{transactionType}}</td>
            <td style="text-align:right">{{quantity}}</td>
            <td style="text-align:center">
                {{previousStock}} → {{newStock}}
            </td>
            <td>{{supplier}}</td>
            <td>{{lotNumber}}</td>
            <td>{{brand}}</td>
            <td>{{performedBy}}</td>
            <td>{{notes}}</td>
            </tr>
            {{/reportData}}
        </tbody>
        </table>

    </div>

  </div>
  {{/each}}
</body>
</html>